        private void button1_Click(object sender, EventArgs e)
        {
        //Напишите программу, при помощи которой можно пересчитать граммы в килограммы.
            label3.Text = "";
            double gramm;
            double kilo;

            try
            {
                gramm = Convert.ToDouble(textBox1.Text);
                kilo = gramm / 1000;
                label2.Text = kilo.ToString() + "kilo.";
            }
            catch
            {
                textBox1.Focus();
                label3.Text = "INcorrect!!!!!!!!!";
            }
                       
        }

